{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Label",
  "description": "A label object as parsed from a Discogs XML <label>",
  "properties": {
    "tag": {
      "type": "string",
      "pattern": "^label$"
    },
    "children": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^images$"
              },
              "children": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "type": "string",
                      "pattern": "^image$"
                    },
                    "attrs": {
                      "type": "object",
                      "properties": {
                        "height": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string"
                        },
                        "uri": {
                          "type": "string"
                        },
                        "uri150": {
                          "type": "string"
                        },
                        "width": {
                          "type": "string"
                        }
                      },
                      "required": ["height", "type", "uri", "uri150", "width"]
                    }
                  },
                  "required": ["tag", "attrs"]
                }
              }
            },
            "required": ["tag", "children"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^id$"
              },
              "text": {
                "type": "string",
                "pattern": "^\\d+$"
              }
            },
            "required": ["tag", "text"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^name$"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["tag", "text"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^contactinfo$"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["tag"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^parentLabel$"
              },
              "text": {
                "type": "string"
              },
              "attrs": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^\\d+$"
                  }
                },
                "required": ["id"],
                "additionalProperties": false
              }
            },
            "required": ["tag", "attrs"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^profile$"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["tag"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^data_quality$"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["tag", "text"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^urls$"
              },
              "children": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "type": "string",
                      "pattern": "^url$"
                    },
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": ["tag"]
                }
              }
            },
            "required": ["tag", "children"]
          },
          {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^sublabels$"
              },
              "children": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "tag": {
                      "type": "string",
                      "pattern": "^label$"
                    },
                    "text": {
                      "type": "string"
                    },
                    "attrs": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "pattern": "^\\d+$"
                        }
                      },
                      "required": ["id"],
                      "additionalProperties": false
                    }
                  },
                  "required": ["tag", "text", "attrs"]
                }
              }
            },
            "required": ["tag", "children"]
          }
        ]
      },
      "allOf": [
        {
          "contains": {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^id$"
              }
            },
            "required": ["tag"]
          }
        },
        {
          "contains": {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string",
                "pattern": "^name$"
              }
            },
            "required": ["tag"]
          }
        }
      ]
    }
  },
  "required": ["tag", "children"],
  "type": "object"
}
