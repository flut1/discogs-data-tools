{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "tsBuildInfoFile": "./buildcache/ts",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}