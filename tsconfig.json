{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "tsBuildInfoFile": "./buildcache/ts",
    "outDir": "./lib",
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts"
  ]
}
